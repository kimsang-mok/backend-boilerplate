{
  "name": "reim-backend",
  "version": "0.0.1",
  "description": "This is the server application for Riem.",
  "main": "dist/server.js",
  "author": "sandbox",
  "license": "ISC",
  "keywords": [],
  "scripts": {
    "start": "node run serve",
    "build-ts": "tsc",
    "tslint": "tslint -c tslint.json -p tsconfig.json --fix",
    "build": "concurrently \"npm run tslint\" \"npm run build-ts\"",
    "serve": "node -r module-alias/register dist/server.js",
    "watch-node": "nodemon -r module-alias/register dist/server.js",
    "watch-ts": "tsc -w",
    "watch": "concurrently -k -p \"[{name}]\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "NODE_ENV=test jest --detectOpenHandles",
    "watch-test": "npm run test --watchAll",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "debug": "npm run build && npm run watch-debug",
    "docs:generate": "apidoc -o public/ -i src/modules/",
    "docs:openapi:generate": "apidoc-openapi-3 -o public/ -i src/modules",
    "db:migrate": "sequelize db:migrate",
    "db:migrate:undo": "sequelize db:migrate:undo",
    "pm2": "pm2",
    "sequelize": "sequelize"
  },
  "dependencies": {
    "@types/yargs": "^17.0.32",
    "axios": "^1.6.7",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "http-status": "^1.7.3",
    "i18n": "^0.15.1",
    "module-alias": "^2.2.3",
    "morgan": "^1.10.0",
    "mysql2": "^3.9.1",
    "sequelize": "^6.37.1",
    "sqlite3": "^5.1.7",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.21",
    "@types/i18n": "^0.13.10",
    "@types/jest": "^29.5.12",
    "@types/module-alias": "^2.0.4",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.19",
    "@types/sequelize": "^4.28.20",
    "@types/supertest": "^6.0.2",
    "@types/validator": "^13.11.9",
    "apidoc": "^1.2.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "pm2": "^5.3.1",
    "prettier": "^3.2.5",
    "sequelize-cli": "^6.6.2",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsc-hooks": "^1.1.2",
    "tslint": "^6.1.3",
    "typescript": "^5.3.3"
  },
  "_moduleAliases": {
    "@src": "dist",
    "@modules": "dist/modules",
    "@middlewares": "dist/middlewares",
    "@utils": "dist/utils",
    "@configs": "dist/configs"
  }
}
